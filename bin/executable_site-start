#!/bin/bash
# Start a site


# flag
# e - Exit if any error
# u - Treat unset variables as an error when substituting
# o pipefail - the return value of a pipeline is the status of the last command to exit with a non-zero status or zero if no command exited with a non-zero status
# E - the ERR trap is inherited by shell functions
set -Eeuo pipefail

# Check if the app name is provided
if [ -z "$1" ]; then
    echo "Usage: $0 <site name>"
    exit 1
fi

SITE_NAME=$1

case "$SITE_NAME" in
  "combostrap")
    SITE_QUALIFIED_NAME="site-com-$SITE_NAME"
    PORT=8081 ;;
  "datacadamia")
    SITE_QUALIFIED_NAME="site-com-$SITE_NAME"
    PORT=8082 ;;
  "tabulify")
    SITE_QUALIFIED_NAME="site-com-$SITE_NAME"
    PORT=8083 ;;
  "dd")
    SITE_QUALIFIED_NAME="dokuwiki-docker"
    PORT=8084 ;;
  *)
    SITE_QUALIFIED_NAME="site-com-$SITE_NAME"
    PORT=8080
    echo "Unknown site: $SITE_NAME, port given $PORT"
  ;;
esac


SITE_PATH="$HOME/code/$SITE_QUALIFIED_NAME"

if [ ! -d "$SITE_PATH" ]; then
  echo "The path ($SITE_PATH) was not found. We were unable to find the site directory."
  exit 1
fi

pushd  "$SITE_PATH" &>/dev/null

if [ "$SITE_NAME" == "dd" ]; then
  docker run \
    --name "$SITE_NAME" \
    --rm \
    -d \
    -p $PORT:80 \
    --user 1000:1000 \
    -e DOKU_DOCKER_STRICT=true \
    -e DOKU_DOCKER_ENV=dev \
    -e DOKU_DOCKER_STARTER_SITE=false \
    -e DOKU_DOCKER_ACL_POLICY='public' \
    -e DOKU_DOCKER_ADMIN_NAME='admin' \
    -e DOKU_DOCKER_ADMIN_PASSWORD='welcome' \
    -v "$PWD"/resources/dokuwiki-docker:/opt/dokuwiki-docker \
    -v "$PWD"/resources/dokuwiki-installer:/opt/dokuwiki-installer \
    -v "$PWD"/resources/comboctl:/opt/comboctl \
    -v "$PWD"/resources/phpctl:/opt/phpctl \
    -v "$PWD"/resources/conf/bash/bash.bashrc:/etc/bash.bashrc \
    -v "$PWD"/resources/conf/caddy/Caddyfile:/etc/caddy/Caddyfile \
    ghcr.io/combostrap/dokuwiki:php8.3-latest
else
  docker run \
    --name "$SITE_NAME" \
    --rm \
    -d \
    -p $PORT:80 \
    --user 1000:1000 \
    -e DOKU_DOCKER_ENV=dev \
    -e DOKU_DOCKER_ACL_POLICY='public' \
    -e DOKU_DOCKER_ADMIN_NAME='admin' \
    -e DOKU_DOCKER_ADMIN_PASSWORD='welcome' \
    -v "$PWD":/var/www/html \
    ghcr.io/combostrap/dokuwiki:php8.3-latest
fi
echo "$SITE_NAME should be available at http://localhost:$PORT"

popd &>/dev/null

